import React, { useState, useEffect } from 'react';
import axios from 'axios';
import AvatarOutput from './AvatarOutput';

const AvatarForm: React.FC = () => {
  const [text, setText] = useState<string>('');
  const [image, setImage] = useState<File | null>(null);
  const [imagePreview, setImagePreview] = useState<string | null>(null);
  const [selectedLanguage, setSelectedLanguage] = useState<string>('en-IN');
  const [selectedSpeaker, setSelectedSpeaker] = useState<string>('anushka');
  const [languages, setLanguages] = useState<Record<string, any>>({});
  const [voices, setVoices] = useState<string[]>([]);
  const [loading, setLoading] = useState<boolean>(false);
  const [output, setOutput] = useState<any>(null);
  const [error, setError] = useState<string>('');
  const [fileInputKey, setFileInputKey] = useState<number>(Date.now());

  // ⭐ Get API domain from environment (FIXED APPROACH)
  const getApiDomain = () => {
    return (
      (window as any).REACT_APP_API_URL ||
      (window as any).REACT_APP_BACKEND_URL ||
      'http://localhost:3001'
    );
  };

  // Fetch languages on mount
  useEffect(() => {
    const fetchLanguages = async () => {
      try {
        const apiDomain = getApiDomain();
        console.log('[Avatar] Fetching languages from:', apiDomain);
        
        const response = await axios.get(`${apiDomain}/api/avatar/languages`);
        
        if (response.data.languages) {
          setLanguages(response.data.languages);
        }
        
        if (response.data.voices?.['en-IN']) {
          setVoices(response.data.voices['en-IN']);
          setSelectedSpeaker(response.data.voices['en-IN'][0]);
        }
      } catch (err: any) {
        console.error('[Avatar] Failed to fetch languages:', err);
        setError('Failed to load languages. Check your backend connection.');
      }
    };

    fetchLanguages();
  }, []);

  // Update voices when language changes
  useEffect(() => {
    const updateVoices = async () => {
      try {
        const apiDomain = getApiDomain();
        console.log('[Avatar] Fetching voices for language:', selectedLanguage);
        
        const response = await axios.get(
          `${apiDomain}/api/avatar/voices/${selectedLanguage}`
        );
        
        if (response.data.voices?.length) {
          setVoices(response.data.voices);
          setSelectedSpeaker(response.data.voices[0]);
        }
      } catch (err: any) {
        console.error('[Avatar] Failed to fetch voices:', err);
      }
    };

    updateVoices();
  }, [selectedLanguage]);

  const handleImageChange = (e: React.ChangeEvent<HTMLInputElement>) => {
    const file = e.target.files?.[0];
    if (file) {
      setImage(file);
      
      const reader = new FileReader();
      reader.onloadend = () => {
        setImagePreview(reader.result as string);
      };
      reader.readAsDataURL(file);
    }
  };

  const handleSubmit = async (event: React.FormEvent) => {
    event.preventDefault();

    if (!text.trim()) {
      setError('Please enter text');
      return;
    }

    if (!image) {
      setError('Please select an image');
      return;
    }

    setLoading(true);
    setError('');
    setOutput(null);

    try {
      const formData = new FormData();
      formData.append('image', image);
      formData.append('text', text);
      formData.append('language', selectedLanguage);
      formData.append('speaker', selectedSpeaker);

      const apiDomain = getApiDomain();
      console.log('[Avatar] Submitting to:', apiDomain);
      
      const response = await axios.post(
        `${apiDomain}/api/avatar/generate`,
        formData,
        {
          headers: {
            'Content-Type': 'multipart/form-data',
          },
        }
      );

      console.log('[Avatar] Generation successful:', response.data);
      setOutput(response.data);

      // Clear form
      setText('');
      setImage(null);
      setImagePreview(null);
      setFileInputKey(Date.now());
    } catch (err: any) {
      console.error('[Avatar] Generation error:', err);
      const errorMsg = err.response?.data?.detail || err.message || 'Failed to generate avatar';
      setError(errorMsg);
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className="space-y-6">
      <form onSubmit={handleSubmit} className="bg-white p-6 rounded-lg shadow-lg border border-gray-200">
        <div className="space-y-4">
          <div>
            <label htmlFor="text" className="block text-sm font-medium text-gray-700 mb-2">
              Enter Text (English)
            </label>
            <textarea
              id="text"
              value={text}
              onChange={(e) => setText(e.target.value)}
              placeholder="Enter the text you want the avatar to say... (will be translated automatically)"
              rows={4}
              disabled={loading}
              className="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-[#000099] focus:border-[#000099] resize-vertical"
              required
            />
          </div>

          <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label htmlFor="language" className="block text-sm font-medium text-gray-700 mb-2">
                Select Language
              </label>
              <select
                id="language"
                value={selectedLanguage}
                onChange={(e) => setSelectedLanguage(e.target.value)}
                disabled={loading}
                className="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-[#000099] focus:border-[#000099]"
              >
                {Object.entries(languages).map(([code, lang]: any) => (
                  <option key={code} value={code}>
                    {lang.name} {lang.nativename ? `(${lang.nativename})` : ''}
                  </option>
                ))}
              </select>
            </div>

            <div>
              <label htmlFor="speaker" className="block text-sm font-medium text-gray-700 mb-2">
                Select Voice
              </label>
              <select
                id="speaker"
                value={selectedSpeaker}
                onChange={(e) => setSelectedSpeaker(e.target.value)}
                disabled={loading}
                className="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-[#000099] focus:border-[#000099]"
              >
                {voices.map((voice) => (
                  <option key={voice} value={voice}>
                    {voice.charAt(0).toUpperCase() + voice.slice(1)}
                  </option>
                ))}
              </select>
            </div>
          </div>

          <div>
            <label htmlFor="image" className="block text-sm font-medium text-gray-700 mb-2">
              Upload Image
            </label>
            <input
              key={fileInputKey}
              id="image"
              type="file"
              accept="image/*"
              onChange={handleImageChange}
              disabled={loading}
              className="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-[#000099] focus:border-[#000099]"
              required
            />

            {imagePreview && (
              <div className="mt-3 p-3 border border-gray-200 rounded-md">
                <img
                  src={imagePreview}
                  alt="Preview"
                  className="w-32 h-32 object-cover rounded-md mb-2"
                />
                <div className="text-sm text-gray-600">
                  <span className="font-medium">{image?.name}</span>
                  <span className="ml-2">{((image?.size || 0) / 1024).toFixed(2)} KB</span>
                </div>
              </div>
            )}
          </div>

          <button
            type="submit"
            disabled={loading}
            className="w-full bg-[#000099] text-white py-2 px-4 rounded-md hover:bg-[#0000cc] focus:outline-none focus:ring-2 focus:ring-[#000099] focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed transition-colors"
          >
            {loading ? (
              <>
                <span className="inline-block animate-spin rounded-full h-4 w-4 border-b-2 border-white mr-2" />
                Generating Avatar...
              </>
            ) : (
              'Generate Avatar'
            )}
          </button>

          {error && (
            <p className="text-red-600 text-center text-sm bg-red-50 p-3 rounded-md border border-red-200">
              ⚠️ {error}
            </p>
          )}
        </div>
      </form>

      {output && <AvatarOutput response={output} />}
    </div>
  );
};

export default AvatarForm;
