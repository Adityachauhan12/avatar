import os, sys, subprocess, textwrap

print("Python:", sys.executable)

print("\n1) Where is nvidia-cublas-cu12 installed?")
subprocess.run("python -m pip show nvidia-cublas-cu12 | sed -n 's/^Location: //p'", shell=True, check=False)

print("\n2) Where is tensorrt-libs installed?")
subprocess.run("python -m pip show tensorrt-libs | sed -n 's/^Location: //p'", shell=True, check=False)

print("\n3) Find libcublas.so.12 on disk (fast search in common roots)")
subprocess.run("bash -lc 'ls -R /usr/local/cuda 2>/dev/null | head -n 50 || true'", shell=True, check=False)
subprocess.run("bash -lc 'find /usr/local/cuda /usr/lib /databricks /local_disk0 -name \"libcublas.so.12*\" 2>/dev/null | head -n 50'", shell=True, check=False)

print("\n4) Find libnvinfer.so (TensorRT core library) on disk")
subprocess.run("bash -lc 'find / -name \"libnvinfer.so*\" 2>/dev/null | head -n 50'", shell=True, check=False)
