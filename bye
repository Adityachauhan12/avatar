import { useState, useEffect } from 'react';
import './App.css';

function App() {
  const [text, setText] = useState('');
  const [image, setImage] = useState(null);
  const [imagePreview, setImagePreview] = useState(null);
  const [selectedLanguage, setSelectedLanguage] = useState('en-IN');
  const [selectedSpeaker, setSelectedSpeaker] = useState('anushka');
  const [languages, setLanguages] = useState({});
  const [voices, setVoices] = useState([]);
  const [loading, setLoading] = useState(false);
  const [videoUrl, setVideoUrl] = useState(null);
  const [error, setError] = useState(null);
  const [generatedInfo, setGeneratedInfo] = useState(null);
  const [fileInputKey, setFileInputKey] = useState(Date.now());

  // Fetch available languages and voices on component mount
  useEffect(() => {
    const fetchLanguages = async () => {
      try {
        const response = await fetch('/api/languages');
        if (!response.ok) return;
        const data = await response.json();
        if (data.languages) setLanguages(data.languages);
        if (data.voices?.['en-IN']) {
          setVoices(data.voices['en-IN']);
          setSelectedSpeaker(data.voices['en-IN'][0] || 'anushka');
        }
      } catch (err) {
        console.error('Failed to fetch languages:', err);
      }
    };
    fetchLanguages();
  }, []);

  // Update voices when language changes
  useEffect(() => {
    const updateVoices = async () => {
      try {
        const response = await fetch(
          `/api/voices/${selectedLanguage}`
        );
        if (!response.ok) return;
        const data = await response.json();
        if (data.voices?.length) {
          setVoices(data.voices);
          setSelectedSpeaker(data.voices[0]);
        }
      } catch (err) {
        console.error('Failed to fetch voices:', err);
      }
    };
    updateVoices();
  }, [selectedLanguage]);

  const handleImageChange = (e) => {
    const file = e.target.files[0];
    if (file) {
      setImage(file);
      const reader = new FileReader();
      reader.onloadend = () => setImagePreview(reader.result);
      reader.readAsDataURL(file);
    }
  };

  const handleSubmit = async (e) => {
    e.preventDefault();

    if (!text.trim()) {
      setError('Please enter text');
      return;
    }
    if (!image) {
      setError('Please select an image');
      return;
    }

    setError(null);
    setLoading(true);

    try {
      const formData = new FormData();
      formData.append('image', image);

      const response = await fetch(
        `/api/generate-avatar?text=${encodeURIComponent(text)}&language=${selectedLanguage}&speaker=${selectedSpeaker}`,
        {
          method: 'POST',
          body: formData,
        }
      );

      if (!response.ok) {
        const errorData = await response.json();
        throw new Error(errorData.detail || 'Failed to generate avatar');
      }

      const data = await response.json();
      setVideoUrl(data.video_url);
      setGeneratedInfo({
        language: data.language,
        speaker: data.speaker,
        translatedText: data.translated_text,
      });
      setText('');
      setImage(null);
      setImagePreview(null);
    } catch (err) {
      setError(err.message);
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className="app">
      <div className="container">
        <div className="header">
          <h1>üé¨ Avatar Generator</h1>
          <p className="subtitle">Create multilingual avatar videos</p>
        </div>

        <form onSubmit={handleSubmit} className="form">
          {/* Text Input */}
          <div className="form-group">
            <label htmlFor="text">üìù Enter Text (English)</label>
            <textarea
              id="text"
              value={text}
              onChange={(e) => setText(e.target.value)}
              placeholder="Enter the text you want the avatar to say... (will be translated automatically)"
              rows="4"
              disabled={loading}
              className="textarea"
            />
          </div>

          {/* Language Selection */}
          <div className="form-row">
            <div className="form-group">
              <label htmlFor="language">üåç Select Language</label>
              <select
                id="language"
                value={selectedLanguage}
                onChange={(e) => setSelectedLanguage(e.target.value)}
                disabled={loading}
                className="select"
              >
                {Object.entries(languages).map(([code, lang]) => (
                  <option key={code} value={code}>
                    {lang.name} ({lang.native_name})
                  </option>
                ))}
              </select>
              <p className="select-hint">
                Your text will be automatically translated to {languages[selectedLanguage]?.name}
              </p>
            </div>

            {/* Speaker Selection */}
            <div className="form-group">
              <label htmlFor="speaker">üé§ Select Voice</label>
              <select
                id="speaker"
                value={selectedSpeaker}
                onChange={(e) => setSelectedSpeaker(e.target.value)}
                disabled={loading}
                className="select"
              >
                {voices.map((voice) => (
                  <option key={voice} value={voice}>
                    {voice.charAt(0).toUpperCase() + voice.slice(1)}
                  </option>
                ))}
              </select>
            </div>
          </div>

          {/* Image Upload */}
          <div className="form-group">
            <label htmlFor="image">üñºÔ∏è Upload Image</label>
            <input
              key={fileInputKey}
              id="image"
              type="file"
              accept="image/*"
              onChange={handleImageChange}
              disabled={loading}
              className="file-input"
            />
            {imagePreview && (
              <div className="preview">
                <img src={imagePreview} alt="Preview" className="preview-img" />
                <div className="preview-info">
                  <span className="filename">{image?.name}</span>
                  <span className="file-size">
                    {(image?.size / 1024).toFixed(2)} KB
                  </span>
                </div>
              </div>
            )}
          </div>

          {/* Submit Button */}
          <button type="submit" disabled={loading} className="submit-btn">
            {loading ? (
              <>
                <span className="spinner">‚è≥</span> Generating Avatar...
              </>
            ) : (
              <>
                <span>üöÄ</span> Generate Avatar
              </>
            )}
          </button>
        </form>

        {error && (
          <div className="alert alert-error">
            <span className="alert-icon">‚ö†Ô∏è</span>
            {error}
          </div>
        )}

        {videoUrl && (
          <div className="result">
            <div className="result-header">
              <h2>‚úÖ Avatar Generated Successfully!</h2>
            </div>

            {generatedInfo && (
              <div className="generation-info">
                <div className="info-item">
                  <span className="info-label">Language:</span>
                  <span className="info-value">
                    {languages[generatedInfo.language]?.name}
                  </span>
                </div>
                <div className="info-item">
                  <span className="info-label">Voice:</span>
                  <span className="info-value">
                    {generatedInfo.speaker.charAt(0).toUpperCase() +
                      generatedInfo.speaker.slice(1)}
                  </span>
                </div>
                <div className="info-item full-width">
                  <span className="info-label">Translated Text:</span>
                  <span className="info-value">{generatedInfo.translatedText}</span>
                </div>
              </div>
            )}

            <div className="video-container">
              <video controls className="video-player">
                <source src={videoUrl} type="video/mp4" />
                Your browser does not support the video tag.
              </video>
            </div>

            <div className="result-actions">
              <a href={videoUrl} download="avatar.mp4" className="download-btn">
                ‚¨áÔ∏è Download Video
              </a>
              <button
                onClick={() => {
                  setVideoUrl(null);
                  setGeneratedInfo(null);
                  setText('');
                  setImage(null);
                  setImagePreview(null);
                  setError(null);
                  setFileInputKey(Date.now());
                }}
                className="create-another-btn"
              >
                ‚ûï Create Another
              </button>
            </div>
          </div>
        )}
      </div>
    </div>
  );
}

export default App;
