import React, { useEffect, useState } from 'react';
import { Download, RefreshCw } from 'lucide-react';

interface AvatarOutputProps {
  response: {
    videourl: string;
    filename: string;
    language: string;
    speaker: string;
    translatedtext: string;
    originaltext: string;
  };
}

const AvatarOutput: React.FC<AvatarOutputProps> = ({ response }) => {
  const [videoSrc, setVideoSrc] = useState<string>('');
  const [downloading, setDownloading] = useState(false);
  const [downloadError, setDownloadError] = useState<string>('');

  // Extract filename and construct streaming URL
  useEffect(() => {
    if (response?.videourl) {
      const filename = response.videourl.split('/').pop() || response.filename;
      const apiDomain = (window as any).REACT_APP_API_URL || 'http://localhost:3001';
      
      // ⭐ Use streaming endpoint for playback (NOT download)
      const streamingUrl = `${apiDomain}/api/avatar/stream/${filename}`;
      setVideoSrc(streamingUrl);
      console.log('Video Source:', streamingUrl);
    }
  }, [response]);

  const handleCreateAnother = () => {
    window.location.reload();
  };

  const handleDownload = async () => {
    try {
      setDownloading(true);
      setDownloadError('');

      const filename = response.videourl.split('/').pop() || response.filename;
      const apiDomain = (window as any).REACT_APP_API_URL || 'http://localhost:3001';
      
      // ⭐ Use download endpoint for saving
      const downloadUrl = `${apiDomain}/api/avatar/download/${filename}`;
      console.log('Downloading from:', downloadUrl);

      // Fetch as blob
      const response_fetch = await fetch(downloadUrl, {
        method: 'GET',
        credentials: 'include',
      });

      if (!response_fetch.ok) {
        throw new Error(`Download failed: ${response_fetch.statusText}`);
      }

      const blob = await response_fetch.blob();

      // Create blob URL and trigger download
      const blobUrl = window.URL.createObjectURL(blob);
      const link = document.createElement('a');
      link.href = blobUrl;
      link.download = filename || 'avatar.mp4';
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);

      // Clean up
      window.URL.revokeObjectURL(blobUrl);
      console.log('Download initiated successfully');
    } catch (err: any) {
      console.error('Download error:', err);
      setDownloadError(err.message || 'Failed to download video');
    } finally {
      setDownloading(false);
    }
  };

  return (
    <div className="bg-white p-6 rounded-lg shadow-lg border border-gray-200">
      <div className="text-green-600 font-semibold mb-4 flex items-center">
        <span className="mr-2">✓</span>
        Avatar Generated Successfully!
      </div>

      <div className="space-y-4">
        <div className="grid grid-cols-1 md:grid-cols-2 gap-4 p-4 bg-gray-50 rounded-md">
          <div>
            <span className="font-semibold text-gray-700">Language</span>
            <span className="ml-2">{response.language}</span>
          </div>
          <div>
            <span className="font-semibold text-gray-700">Voice</span>
            <span className="ml-2">{response.speaker.charAt(0).toUpperCase() + response.speaker.slice(1)}</span>
          </div>
          <div className="md:col-span-2">
            <span className="font-semibold text-gray-700">Translated Text</span>
            <p className="mt-1 text-gray-600">{response.translatedtext}</p>
          </div>
        </div>

        <div>
          <h3 className="font-semibold text-gray-700 mb-2">Video Player</h3>
          <div className="video-container">
            {videoSrc ? (
              <video
                controls
                className="w-full max-w-2xl mx-auto rounded-lg shadow-md"
                style={{ maxHeight: '400px' }}
              >
                <source src={videoSrc} type="video/mp4" />
                Your browser does not support the video tag.
              </video>
            ) : (
              <div className="text-center text-gray-500 py-8">Loading video...</div>
            )}
          </div>
        </div>

        <div className="flex flex-col sm:flex-row gap-3 pt-4 border-t border-gray-200">
          <button
            onClick={handleDownload}
            disabled={downloading}
            className="bg-[#000099] text-white px-6 py-2 rounded-md hover:bg-[#0000cc] focus:outline-none focus:ring-2 focus:ring-[#000099] focus:ring-offset-2 transition-colors flex items-center justify-center gap-2 disabled:opacity-50 disabled:cursor-not-allowed"
          >
            <Download size={18} />
            {downloading ? 'Downloading...' : 'Download Video'}
          </button>

          <button
            onClick={handleCreateAnother}
            className="bg-gray-500 text-white px-6 py-2 rounded-md hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors flex items-center justify-center gap-2"
          >
            <RefreshCw size={18} />
            Create Another
          </button>
        </div>

        {downloadError && (
          <div className="text-red-600 text-sm p-3 bg-red-50 rounded-md border border-red-200">
            ⚠️ {downloadError}
          </div>
        )}
      </div>
    </div>
  );
};

export default AvatarOutput;
