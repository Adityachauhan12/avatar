import React, { useState, useEffect } from 'react';
import axios from 'axios';
import AvatarOutput from './AvatarOutput';

const AvatarForm: React.FC = () => {
  const [text, setText] = useState('');
  const [image, setImage] = useState<File | null>(null);
  const [imagePreview, setImagePreview] = useState<string | null>(null);
  const [selectedLanguage, setSelectedLanguage] = useState('en-IN');
  const [selectedSpeaker, setSelectedSpeaker] = useState('anushka');
  const [languages, setLanguages] = useState<Record<string, any>>({});
  const [voices, setVoices] = useState<string[]>([]);
  const [loading, setLoading] = useState(false);
  const [output, setOutput] = useState<any>(null);
  const [error, setError] = useState('');
  const [fileInputKey, setFileInputKey] = useState(Date.now());

  // Fetch available languages and voices on component mount
  useEffect(() => {
    const fetchLanguages = async () => {
      try {
        const apiDomain = `${(window as any).REACT_APP_REDIRECT_URL}`;
        const response = await axios.get(`${apiDomain}/api/avatar/languages`);
        if (response.data.languages) {
          setLanguages(response.data.languages);
        }
        if (response.data.voices?.['en-IN']) {
          setVoices(response.data.voices['en-IN']);
          setSelectedSpeaker(response.data.voices['en-IN'][0] || 'anushka');
        }
      } catch (err) {
        console.error('Failed to fetch languages:', err);
      }
    };
    fetchLanguages();
  }, []);

  // Update voices when language changes
  useEffect(() => {
    const updateVoices = async () => {
      try {
        const apiDomain = `${(window as any).REACT_APP_REDIRECT_URL}`;
        const response = await axios.get(`${apiDomain}/api/avatar/voices/${selectedLanguage}`);
        if (response.data.voices?.length) {
          setVoices(response.data.voices);
          setSelectedSpeaker(response.data.voices[0]);
        }
      } catch (err) {
        console.error('Failed to fetch voices:', err);
      }
    };
    updateVoices();
  }, [selectedLanguage]);

  const handleImageChange = (e: React.ChangeEvent<HTMLInputElement>) => {
    const file = e.target.files?.[0];
    if (file) {
      setImage(file);
      const reader = new FileReader();
      reader.onloadend = () => setImagePreview(reader.result as string);
      reader.readAsDataURL(file);
    }
  };

  const handleSubmit = async (event: React.FormEvent) => {
    event.preventDefault();

    if (!text.trim()) {
      setError('Please enter text');
      return;
    }
    if (!image) {
      setError('Please select an image');
      return;
    }

    setLoading(true);
    setError('');
    setOutput(null);

    try {
      const formData = new FormData();
      formData.append('image', image);
      formData.append('text', text);
      formData.append('language', selectedLanguage);
      formData.append('speaker', selectedSpeaker);

      const apiDomain = `${(window as any).REACT_APP_REDIRECT_URL}`;
      const response = await axios.post(`${apiDomain}/api/avatar/generate`, formData, {
        headers: {
          'Content-Type': 'multipart/form-data',
        },
      });

      setOutput(response.data);
      // Clear form after successful generation
      setText('');
      setImage(null);
      setImagePreview(null);
      setFileInputKey(Date.now());
    } catch (err: any) {
      setError(err.response?.data?.detail || 'Failed to generate avatar');
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className="space-y-6">
      <form onSubmit={handleSubmit} className="bg-white p-6 rounded-lg shadow-lg border border-gray-200">
        <div className="space-y-4">
          {/* Text Input */}
          <div>
            <label htmlFor="text" className="block text-sm font-medium text-gray-700 mb-2">
              üìù Enter Text (English)
            </label>
            <textarea
              id="text"
              value={text}
              onChange={(e) => setText(e.target.value)}
              placeholder="Enter the text you want the avatar to say... (will be translated automatically)"
              rows={4}
              disabled={loading}
              className="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-[#000099] focus:border-[#000099] resize-vertical"
              required
            />
          </div>

          {/* Language and Voice Selection */}
          <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label htmlFor="language" className="block text-sm font-medium text-gray-700 mb-2">
                üåç Select Language
              </label>
              <select
                id="language"
                value={selectedLanguage}
                onChange={(e) => setSelectedLanguage(e.target.value)}
                disabled={loading}
                className="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-[#000099] focus:border-[#000099]"
              >
                {Object.entries(languages).map(([code, lang]) => (
                  <option key={code} value={code}>
                    {lang.name} ({lang.native_name})
                  </option>
                ))}
              </select>
              <p className="text-xs text-gray-500 mt-1">
                Your text will be automatically translated to {languages[selectedLanguage]?.name}
              </p>
            </div>

            <div>
              <label htmlFor="speaker" className="block text-sm font-medium text-gray-700 mb-2">
                üé§ Select Voice
              </label>
              <select
                id="speaker"
                value={selectedSpeaker}
                onChange={(e) => setSelectedSpeaker(e.target.value)}
                disabled={loading}
                className="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-[#000099] focus:border-[#000099]"
              >
                {voices.map((voice) => (
                  <option key={voice} value={voice}>
                    {voice.charAt(0).toUpperCase() + voice.slice(1)}
                  </option>
                ))}
              </select>
            </div>
          </div>

          {/* Image Upload */}
          <div>
            <label htmlFor="image" className="block text-sm font-medium text-gray-700 mb-2">
              üñºÔ∏è Upload Image
            </label>
            <input
              key={fileInputKey}
              id="image"
              type="file"
              accept="image/*"
              onChange={handleImageChange}
              disabled={loading}
              className="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-[#000099] focus:border-[#000099]"
              required
            />
            {imagePreview && (
              <div className="mt-3 p-3 border border-gray-200 rounded-md">
                <img src={imagePreview} alt="Preview" className="w-32 h-32 object-cover rounded-md mb-2" />
                <div className="text-sm text-gray-600">
                  <span className="font-medium">{image?.name}</span>
                  <span className="ml-2">({(image?.size! / 1024).toFixed(2)} KB)</span>
                </div>
              </div>
            )}
          </div>

          <button
            type="submit"
            disabled={loading}
            className="w-full bg-[#000099] text-white py-2 px-4 rounded-md hover:bg-[#0000cc] focus:outline-none focus:ring-2 focus:ring-[#000099] focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed transition-colors"
          >
            {loading ? (
              <>
                <span className="inline-block animate-spin rounded-full h-4 w-4 border-b-2 border-white mr-2"></span>
                Generating Avatar...
              </>
            ) : (
              <>
                üöÄ Generate Avatar
              </>
            )}
          </button>

          {error && (
            <p className="text-red-600 text-center text-sm">{error}</p>
          )}
        </div>
      </form>

      {output && (
        <AvatarOutput response={output} />
      )}
    </div>
  );
};

export default AvatarForm;













import React from 'react';

interface AvatarOutputProps {
  response: {
    video_url: string;
    language: string;
    speaker: string;
    translated_text: string;
  };
}

const AvatarOutput: React.FC<AvatarOutputProps> = ({ response }) => {
  const handleCreateAnother = () => {
    window.location.reload();
  };

  const handleDownload = async (videoUrl: string) => {
    try {
      const apiDomain = `${(window as any).REACT_APP_REDIRECT_URL}`;
      const fullUrl = videoUrl.startsWith('http') ? videoUrl : `${apiDomain}${videoUrl}`;
      
      const response = await fetch(fullUrl, {
        method: 'GET',
        headers: {
          'Accept': 'video/mp4',
        },
      });
      
      if (!response.ok) {
        throw new Error(`HTTP error! status: ${response.status}`);
      }
      
      const blob = await response.blob();
      const url = window.URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = 'avatar.mp4';
      document.body.appendChild(a);
      a.click();
      window.URL.revokeObjectURL(url);
      document.body.removeChild(a);
    } catch (error) {
      console.error('Download failed:', error);
      // Fallback to direct link
      const apiDomain = `${(window as any).REACT_APP_REDIRECT_URL}`;
      const fullUrl = videoUrl.startsWith('http') ? videoUrl : `${apiDomain}${videoUrl}`;
      window.open(fullUrl, '_blank');
    }
  };

  return (
    <div className="bg-white p-6 rounded-lg shadow-lg border border-gray-200">
      <div className="text-green-600 font-semibold mb-4 flex items-center">
        <span className="mr-2">‚úÖ</span>
        Avatar Generated Successfully!
      </div>

      <div className="space-y-4">
        {/* Generation Info */}
        <div className="grid grid-cols-1 md:grid-cols-2 gap-4 p-4 bg-gray-50 rounded-md">
          <div>
            <span className="font-semibold text-gray-700">üåç Language:</span>
            <span className="ml-2">{response.language}</span>
          </div>
          <div>
            <span className="font-semibold text-gray-700">üé§ Voice:</span>
            <span className="ml-2">{response.speaker.charAt(0).toUpperCase() + response.speaker.slice(1)}</span>
          </div>
          <div className="md:col-span-2">
            <span className="font-semibold text-gray-700">üìù Translated Text:</span>
            <p className="mt-1 text-gray-600">{response.translated_text}</p>
          </div>
        </div>

        {/* Video Player */}
        <div className="video-container">
          <video 
            controls 
            className="w-full max-w-2xl mx-auto rounded-lg shadow-md"
            style={{ maxHeight: '400px' }}
            preload="metadata"
          >
            <source src={response.video_url} type="video/mp4" />
            Your browser does not support the video tag.
          </video>
        </div>

        {/* Action Buttons */}
        <div className="flex flex-col sm:flex-row gap-3 pt-4 border-t border-gray-200">
          <button
            onClick={() => handleDownload(response.video_url)}
            className="bg-[#000099] text-white px-6 py-2 rounded-md hover:bg-[#0000cc] focus:outline-none focus:ring-2 focus:ring-[#000099] focus:ring-offset-2 transition-colors text-center flex items-center justify-center gap-2"
          >
            ‚¨áÔ∏è Download Video
          </button>
          <button
            onClick={handleCreateAnother}
            className="bg-gray-500 text-white px-6 py-2 rounded-md hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors flex items-center justify-center gap-2"
          >
            ‚ûï Create Another
          </button>
        </div>
      </div>
    </div>
  );
};

export default AvatarOutput;







import React from 'react';
import { User } from 'lucide-react';
import AvatarForm from '../components/AvatarForm';

const AvatarGenerator: React.FC = () => {
  return (
    <div className="p-6 pt-40">
      <div className="bg-white p-6 rounded-lg shadow-lg border border-gray-200 mb-6">
        <div className="flex flex-col md:flex-row items-start md:items-center justify-between gap-4">
          <div className="flex items-center gap-3">
            <div className="w-10 h-10 bg-gradient-to-r from-[#000099] to-[#0000cc] rounded-xl flex items-center justify-center shadow-lg">
              <User className="w-6 h-6 text-white" />
            </div>
            <div>
              <h1 className="text-3xl font-bold text-gray-900 mb-1">
                Avatar Generator
              </h1>
              <p className="text-gray-600">
                Create multilingual avatar videos with AI-powered voice synthesis
              </p>
            </div>
          </div>
        </div>
      </div>
      
      <AvatarForm />
    </div>
  );
};

export default AvatarGenerator;






